{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Post list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>my id</th>
                <th>Title</th>
                <th>Content</th>
                <th>Excerpt</th>
                <th>Status</th>
                <th>Type</th>
                <th>Date</th>
                <th>Parent</th>
                <th>Slug</th>
                <th>Author</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('mac_post_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.content }}</td>
                <td>{{ entity.excerpt }}</td>
                <td>{{ entity.status }}</td>
                <td>{{ entity.type }}</td>
                <td>{% if entity.date %}{{ entity.date|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.parent }}</td>
                <td>{{ entity.slug }}</td>
                <td>{{ entity.author }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('mac_post_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('mac_post_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('mac_post_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
